<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>boletim</display-name>

	<servlet>
		<servlet-name>Index</servlet-name>
		<servlet-class>br.com.poo.Index</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CadastroAluno</servlet-name>
		<servlet-class>br.com.poo.CadastroAluno</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>CadAluno</servlet-name>
		<servlet-class>br.com.poo.CadAluno</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ListaAluno</servlet-name>
		<servlet-class>br.com.poo.ListaAluno</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>DeletaAluno</servlet-name>
		<servlet-class>br.com.poo.DeletaAluno</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>EditarAluno</servlet-name>
		<servlet-class>br.com.poo.EditarAluno</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>AtualizaAluno</servlet-name>
		<servlet-class>br.com.poo.AtualizaAluno</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Menu</servlet-name>
		<servlet-class>br.com.poo.Menu</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Header</servlet-name>
		<servlet-class>br.com.poo.Header</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Footer</servlet-name>
		<servlet-class>br.com.poo.Footer</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/poo</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CadastroAluno</servlet-name>
		<url-pattern>/cadastrar</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Menu</servlet-name>
		<url-pattern>/menu</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Header</servlet-name>
		<url-pattern>/header</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Footer</servlet-name>
		<url-pattern>/footer</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>CadAluno</servlet-name>
		<url-pattern>/CadAluno</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ListaAluno</servlet-name>
		<url-pattern>/lista</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>DeletaAluno</servlet-name>
		<url-pattern>/DeletaAluno</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>EditarAluno</servlet-name>
		<url-pattern>/editaraluno</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>AtualizaAluno</servlet-name>
		<url-pattern>/atualiza</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
	    <welcome-file>poo</welcome-file>
	</welcome-file-list>
</web-app>